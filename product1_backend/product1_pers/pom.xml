<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>sk.itlearning.java5</groupId>
		<artifactId>product1_backend</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<artifactId>product1_pers</artifactId>

	<properties>
		<postgresql.driver.version>42.3.3</postgresql.driver.version>
		<eclipselink.version>2.7.3</eclipselink.version>
		<javaee.web.api.version>8.0</javaee.web.api.version>
		<jdbcDdlRes>src/main/resources/sql</jdbcDdlRes>
		<jdbcUrlRoot>jdbc:postgresql://localhost:5432/</jdbcUrlRoot>
		<jdbcDriver>org.postgresql.Driver</jdbcDriver>
		<jdbcUserRoot>postgres</jdbcUserRoot>
		<jdbcPasswordRoot>sa</jdbcPasswordRoot>
		<jdbcUrlDatabase>jdbc:postgresql://localhost:5432/customer</jdbcUrlDatabase>
		<jdbcDdlCreate>app-db-schema-postgres-create.sql</jdbcDdlCreate>
		<jdbcDdlDrop>app-db-schema-postgres-create.sql</jdbcDdlDrop>
		<jdbcDdlMkdb>app-db-postgres-create.sql</jdbcDdlMkdb>
	</properties>

	<build>
		<finalName>restapi</finalName>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.codehaus.mojo</groupId>
					<artifactId>sql-maven-plugin</artifactId>
					<version>1.5</version>
					<dependencies>
						<dependency>
							<groupId>org.postgresql</groupId>
							<artifactId>postgresql</artifactId>
							<version>${postgresql.driver.version}</version>
						</dependency>
					</dependencies>
					<configuration>
						<url>${jdbcUrlRoot}</url>
						<driver>${jdbcDriver}</driver>
						<username>${jdbcUserRoot}</username>
						<password>${jdbcPasswordRoot}</password>
						<autocommit>true</autocommit>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<dependencies>
		<dependency>
			<groupId>javax</groupId>
			<artifactId>javaee-api</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>sk.itlearning.java5</groupId>
			<artifactId>product1_conf</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.eclipse.persistence</groupId>
			<artifactId>eclipselink</artifactId>
			<version>${eclipselink.version}</version>
		</dependency>
		<dependency>
			<groupId>org.postgresql</groupId>
			<artifactId>postgresql</artifactId>
			<version>${postgresql.driver.version}</version>
		</dependency>
	</dependencies>

	<profiles>
		<profile>
			<id>mkdb</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>sql-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>make_db</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>execute</goal>
								</goals>
								<configuration>
									<onError>continue</onError>
									<srcFiles>
										<srcFile>${jdbcDdlRes}/${jdbcDdlMkdb}</srcFile>
									</srcFiles>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>gensch</id>
			<build>
				<plugins>
					<plugin>
						<groupId>us.hornerscorners.mojo</groupId>
						<artifactId>eclipselink-ddlgeneration-maven-plugin</artifactId>
						<version>1.8</version>
						<executions>
							<execution>
								<id>gen_schema</id>
								<phase>process-classes</phase>
								<goals>
									<goal>execute</goal>
								</goals>
							</execution>
						</executions>
						<dependencies>
							<dependency>
								<groupId>javax</groupId>
								<artifactId>javaee-web-api</artifactId>
								<version>${javaee.web.api.version}</version>
							</dependency>
							<dependency>
								<groupId>org.postgresql</groupId>
								<artifactId>postgresql</artifactId>
								<version>${postgresql.driver.version}</version>
							</dependency>
							<dependency>
								<groupId>org.eclipse.persistence</groupId>
								<artifactId>eclipselink</artifactId>
								<version>${eclipselink.version}</version>
							</dependency>
						</dependencies>
						<configuration>
							<jdbcUrl>${jdbcUrlDatabase}</jdbcUrl>
							<jdbcDriver>${jdbcDriver}</jdbcDriver>
							<jdbcUser>${jdbcUserRoot}</jdbcUser>
							<jdbcPassword>${jdbcPasswordRoot}</jdbcPassword>
							<outputDir>${jdbcDdlRes}</outputDir>
							<createFilename>${jdbcDdlCreate}</createFilename>
							<deleteFilename>${jdbcDdlDrop}</deleteFilename>
							<unitName>DDL_GEN</unitName>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>

		<profile>
			<id>loadsch</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>sql-maven-plugin</artifactId>
						<executions>
							<execution>
								<id>load_schema</id>
								<phase>generate-resources</phase>
								<goals>
									<goal>execute</goal>
								</goals>
								<configuration>
									<onError>continue</onError>
									<url>${jdbcUrlDatabase}</url>
									<srcFiles>
										<srcFile>${jdbcDdlRes}/${jdbcDdlCreate}</srcFile>
									</srcFiles>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
